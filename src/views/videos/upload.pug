extend ../base

block content
	if errMsg
		span=errMsg
	form(method="POST", enctype="multipart/form-data")
		label(for="video") Video Files
		input(type="file" accept="video/*", id="video", required, name="video")
		input(type="text", name="title", placeholder="Title", maxlength=80, required)
		input(type="text", name="description", placeholder="Description", minlength=10, required)
		input(type="text", name="hashtags", placeholder="Hashtags, separated by comma.", required)
		input(type="submit", value="Upload Video")