extends ../base

block content
	if loggedInUser.avatarUrl
		img(src=`${loggedInUser.noPasswordAccount ? "" : "/"}` + loggedInUser.avatarUrl, width="100", height="100")
	h4 Edit Profile
	form(method="POST", enctype="multipart/form-data")
		label(for="avatar") Avatar
		input(type="file", accept="image/*", id="avatar", name="avatar")
		input(type="email", required, name="email", placeholder="Email", value=loggedInUser.email)
		input(type="text", required, name="username", placeholder="Username", value=loggedInUser.username)
		input(type="text", name="name", placeholder="Name", value=loggedInUser.name)
		input(type="text", required, name="location", placeholder="Location", value=loggedInUser.location)
		input(type="submit", value="Update Profile")
		if !loggedInUser.noPasswordAccount
			hr
			a(href="edit/password") Change Password &rarr;